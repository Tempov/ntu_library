<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="publishing_house_view_tree" model="ir.ui.view">
        <field name="name">publishing.house.tree</field>
        <field name="model">publishing.house</field>
        <field name="arch" type="xml">
            <tree string="Publishing house">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="publishing_house_view_form" model="ir.ui.view">
        <field name="name">publishing.house.form</field>
        <field name="model">publishing.house</field>
        <field name="arch" type="xml">
            <form string="Publishing house">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="publishing_house_search" model="ir.ui.view">
        <field name="name">publishing.house.search</field>
        <field name="model">publishing.house</field>
        <field name="arch" type="xml">
            <search string="Publishing house">
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="publishing_house_action" model="ir.actions.act_window">
        <field name="name">Publishing House</field>
        <field name="res_model">publishing.house</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>