<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ntu_library_autor_view_tree" model="ir.ui.view">
        <field name="name">ntu.library.autor.tree</field>
        <field name="model">ntu.library.autor</field>
        <field name="arch" type="xml">
            <tree string="NTU Library Autor">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="ntu_library_autor_view_form" model="ir.ui.view">
        <field name="name">ntu.library.autor.form</field>
        <field name="model">ntu.library.autor</field>
        <field name="arch" type="xml">
            <form string="NTU Library Autor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ntu_library_autor_search" model="ir.ui.view">
        <field name="name">ntu.library.autor.search</field>
        <field name="model">ntu.library.autor</field>
        <field name="arch" type="xml">
            <search string="NTU Library Autor">
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="ntu_library_autor_action" model="ir.actions.act_window">
        <field name="name">Autor</field>
        <field name="res_model">ntu.library.autor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>